<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    android:state_window_focused="false"
    android:drawable="@drawable/layout_list_background"
    android:id="@+id/item">
    <ImageView
        android:id="@+id/iv_item_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:background="#ffffff"
        android:padding="4px"
        />
<GridLayout android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tv_item_abstract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
       android:textColor="#ff464646"
        android:textSize="16sp"
        android:textStyle="bold"
        android:singleLine="true"
        />
</GridLayout>
    <GridLayout android:layout_gravity="center_vertical|right"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff1aafdc"
            android:textSize="14sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_item_arrow"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            android:textColor="#ff8c8c8c"
            android:textSize="28sp" />
    </GridLayout>
</GridLayout>
